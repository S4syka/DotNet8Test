@model Domain.DTOs.HomePicture

<h2>Delete home picture</h2>

<p>Are you sure you want to delete this Home Picture?</p>

@using (Html.BeginForm("Delete", "HomePicture"))
{
    @Html.HiddenFor(model => model.Id)
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}